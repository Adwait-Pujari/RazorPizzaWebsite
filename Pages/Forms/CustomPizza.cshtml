@page
@model RazorPizzaWebsite.Pages.Forms.CustomPizzaModel
@{
}


<div class="text-center container">
    <h1> Create Your Own Pizza</h1>

    <form method="post" class="mx-auto mt-auto mb-auto px-auto pt-auto pb-auto rounded-5 alert-light col-4">

        <div class="row">
            <input type="text" asp-for="Pizza.PizzaName" placeholder="Name Your Pizza" /> <br />
            <div class="col-6">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="Pizza.TomatoSauce" placeholder="Tomato Sauce" id="checkbox1">
                    <label class="form-check-label" for="checkbox1">Tomato Sauce</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="Pizza.Cheese" placeholder="Cheese" id="checkbox2">
                    <label class="form-check-label" for="checkbox2">Cheese</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="Pizza.Peperoni" placeholder="Peperoni" id="checkbox3">
                    <label class="form-check-label" for="checkbox3">Peperoni</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="Pizza.Mushroom" placeholder="Mushroom" id="checkbox4">
                    <label class="form-check-label" for="checkbox4">Mushroom</label>
                </div>
            </div>
            <div class="col-6">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="Pizza.Tuna" placeholder="Tuna" id="checkbox5">
                    <label class="form-check-label" for="checkbox5">Tuna</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="Pizza.Pineapple" placeholder="Pineapple" id="checkbox6">
                    <label class="form-check-label" for="checkbox6">Pineapple</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="Pizza.Ham" placeholder="Ham" id="checkbox7">
                    <label class="form-check-label" for="checkbox7">Ham</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="Pizza.Beef" placeholder="Beef" id="checkbox8">
                    <label class="form-check-label" for="checkbox8">Beef</label>
                </div>
            </div>
        </div>
        <button class="btn btn-primary mt-1" type="submit"> Order My Pizza</button>
            
    </form>
</div>